{
  "name": "nestjs-template",
  "version": "0.0.4",
  "description": "Rokket Labs' NestJS template for all backend projects",
  "author": "Rokket Labs <tomas@rokketlabs.com>",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^16.19.0 || ^18.10.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "prestart": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "type-check": "tsc",
    "prepare": "husky install"
  },
  "dependencies": {
    "@apollo/server": "^4.6.0",
    "@m8a/nestjs-typegoose": "^11.0.0",
    "@nestjs/apollo": "^11.0.5",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.4.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.4.0",
    "@nestjs/graphql": "^11.0.5",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/terminus": "^9.2.2",
    "@typegoose/typegoose": "^11.0.0",
    "axios": "^1.3.5",
    "bcryptjs": "^2.4.3",
    "file-type": "^16.5.4",
    "graphql": "^16.6.0",
    "graphql-tools": "^8.3.20",
    "graphql-ws": "^5.12.1",
    "mongoose": "7.0.3",
    "nanoid": "^3.3.6",
    "nestjs-role-protected": "^0.2.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "ramda": "^0.29.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.4.0",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.4.0",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-rokket-labs": "^0.4.11",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.3",
    "jest": "29.5.0",
    "lint-staged": "^11.2.6",
    "prettier": "^2.8.7",
    "prettier-eslint": "^15.0.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "{*.{json,md}}": [
      "prettier --write"
    ]
  }
}
